                    </DockPanel>
                    <DockPanel Visibility="{Binding visibleTestLazyTreeVM}">
                        <!-- TODO: d:DataContext 필요시 추가 예정 (2023.07.12 jbh) -->
                        <!--<v:ExplorerView d:DataContext="{d:DesignInstance Type=vm:TestLazyTreeVM}"/>-->
                        <v:TestLazyTreeV/>
