                     ItemsSource="{Binding ElementName=folderTreeView, Path=SelectedItem.FileInfoCollection, Mode=OneWay}"
                     ItemTemplate="{DynamicResource TestDataTemplate}">
                  --><!-- 파일 이름 (Name) string --><!--
