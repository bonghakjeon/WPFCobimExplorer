                                                    <!--<GridViewColumn Header="컨테이너 ID" DisplayMemberBinding="{Binding exp_ContainerId}"/>-->
                                                    <GridViewColumn Header="컨테이너 ID">
                                                        <GridViewColumn.CellTemplate>
