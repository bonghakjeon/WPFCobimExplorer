                                                <!--  참고 2 URL - https://chashtag.tistory.com/43  -->
                                                <!--  참고 3 URL - https://stackoverflow.com/questions/1350598/passing-two-command-parameters-using-a-wpf-binding -->
                                                <!--  참고 4 URL - https://stackoverflow.com/questions/23499671/wpf-multibinding-button-isenabled-with-textboxes  -->
                                                <!--  참고 5 URL - https://stackoverflow.com/questions/22084611/wpf-how-to-bind-together-two-properties-bound-to-two-different-controls -->
                                                <Button.CommandParameter>
                                                    <!--  TODO : 버튼 멀티 바인딩 시 프로퍼티 Path 사용 (2023.09.19 jbh) -->
