                            <!--<ListView ItemsSource="{Binding ProjectTypeCollection}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ProjectName" DisplayMemberBinding="{Binding ProjectName}"/>
                                    </GridView>
